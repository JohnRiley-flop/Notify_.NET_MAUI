<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Notify.Models"
             xmlns:viewmodel="clr-namespace:Notify.ViewModels"
             x:Class="Notify.Views.MainPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <viewmodel:MainPageViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Label
            Text="Notify"
            Grid.Column="1"
            Grid.Row="1"
            TextColor="{StaticResource Texture_Orange}"
            FontFamily="Punk_regular"
            FontSize="50"/>
        <Button
            Text="New"
            Grid.Row="2"
            Grid.Column="1"
            HorizontalOptions="Start"
            TextColor="{StaticResource Texture_Orange}"
            FontFamily="Punk_regular"
            FontSize="20"
            BackgroundColor="Transparent"
            Command="{Binding GoToAddEntryPage}"/>
        <Button
            Text="Select"
            Grid.Row="3"
            Grid.Column="1"
            HorizontalOptions="Start"
            TextColor="{StaticResource Texture_Orange}"
            FontFamily="Punk_regular"
            FontSize="20"
            BackgroundColor="Transparent"/>
        <Button
            Text="Search"
            Grid.Row="4"
            Grid.Column="1"
            HorizontalOptions="Start"
            TextColor="{StaticResource Texture_Orange}"
            FontFamily="Punk_regular"
            FontSize="20"
            BackgroundColor="Transparent"/>
        <Button
            Text="Settings"
            Grid.Row="6"
            Grid.Column="1"
            HorizontalOptions="Start"
            TextColor="{StaticResource Texture_Orange}"
            FontFamily="Punk_regular"
            FontSize="20"
            BackgroundColor="Transparent"/>
        <ScrollView
            Orientation="Horizontal"
            Grid.Row="2"
            Grid.Column="2"
            Grid.RowSpan="5"
            Grid.ColumnSpan="2">
            <CollectionView
                BackgroundColor="{StaticResource Accent_Gray}"
                ItemsSource="{Binding ShowingEntries}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout 
                        Orientation="Horizontal" 
                        Span="2"
                        HorizontalItemSpacing="30"
                        VerticalItemSpacing="30"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Note">
                        <Frame
                            BackgroundColor="{StaticResource Texture_Orange}"
                            BorderColor="Transparent"
                            CornerRadius="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>

                                <Label
                                    Text="{Binding Title}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    TextColor="{StaticResource Theme_Dark}"
                                    FontFamily="Punk_semibold"
                                    FontSize="16"
                                    TextDecorations="Underline"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
